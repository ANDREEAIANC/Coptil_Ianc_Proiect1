                <label asp-for="Camera.TipCameraId" class="control-label">Tip camera</label>
                <select asp-for="Camera.TipCameraId" class="form-control" asp-items="ViewBag.TipCameraId"></select>
                <span asp-validation-for="Camera.TipCameraId" class="text-danger"></span>
            </div>
