@page
@model Coptil_Ianc_Proiect1.Pages.TipuriServicii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipServiciu[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipServiciu[0].Informatii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipServiciu[0].Pret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TipServiciu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Informatii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.TipServiciuId">Edit</a>
                    }
                    <a asp-page="./Details" asp-route-id="@item.TipServiciuId">Details</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a asp-page="./Delete" asp-route-id="@item.TipServiciuId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
